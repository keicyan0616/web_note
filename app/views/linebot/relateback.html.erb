<!-- LINE CALL BACK 表示ページ -->
<div class="center jumbotron" style="background-color: #FFFFFF; padding: 0px 20px;">
  <p id="notice"><%= notice %></p>

  <h1 class="goal-title">LINE CALL BACK</h1>

  <table class="table table-bordered table-condensed bg-white" style="width: 680px">
    <tbody>
        <tr style="background-color: #FFFFCC; width: 680px">
          <td style="width: 20%; word-break: break-all;">認可コード</td>
          <td style="width: 80%; word-break: break-all;"><%= params[:code] %></td>
        </tr>
        <tr style="background-color: #FFFFCC; width: 680px">
          <td style="width: 20%; word-break: break-all;">アクセストークン</td>
          <td style="width: 80%; word-break: break-all;"><%= @acsToken %></td>
        </tr>
        <tr style="background-color: #FFFFCC; width: 680px">
          <td style="width: 20%; word-break: break-all;">アクセストークン(有効期限)</td>
          <td style="width: 80%; word-break: break-all;"><%= @expIn %></td>
        </tr>
        <tr style="background-color: #FFFFCC; width: 680px">
          <td style="width: 20%; word-break: break-all;">JSONウェブトークン(JWT)</td>
          <td style="width: 80%; word-break: break-all;"><%= @idToken %></td>
        </tr>
        <tr style="background-color: #FFFFCC; width: 680px">
          <td style="width: 20%; word-break: break-all;">付与権限</td>
          <td style="width: 80%; word-break: break-all;"><%= @scope %></td>
        </tr>
        <tr style="background-color: #FFFFCC; width: 680px">
          <td style="width: 20%; word-break: break-all;">ユーザーID</td>
          <td style="width: 80%; word-break: break-all;"><%= @userId %></td>
        </tr>
        <tr style="background-color: #FFFFCC; width: 680px">
          <td style="width: 20%; word-break: break-all;">ユーザー名</td>
          <td style="width: 80%; word-break: break-all;"><%= @displayName %></td>
        </tr>
    </tbody>
  </table>
  
  <br></br>
  <hr>
</div>