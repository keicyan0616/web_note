<!-- LINE CALL BACK 表示ページ -->
<div class="center jumbotron" style="background-color: #FFFFFF; padding: 0px 20px;">
  <p id="notice"><%= notice %></p>

  <h1 class="goal-title">LINE CALL BACK</h1>

  <table class="table table-bordered table-condensed bg-white" style="width: 95%">
    <tbody>
        <tr style="background-color: #FFFFCC; width: 95%">
          <td style="width: 20%">認可コード</td>
          <td style="width: 80%"><%= params[:code] %></td>
        </tr>
        <tr style="background-color: #FFFFCC; width: 95%">
          <td style="width: 20%">アクセストークン</td>
          <td style="width: 80%"><%= @acsToken %></td>
        </tr>
        <tr style="background-color: #FFFFCC; width: 95%">
          <td style="width: 20%">アクセストークン(有効期限)</td>
          <td style="width: 80%"><%= @expIn %></td>
        </tr>
        <tr style="background-color: #FFFFCC; width: 95%">
          <td style="width: 20%">JSONウェブトークン(JWT)</td>
          <td style="width: 80%"><%= @idToken %></td>
        </tr>
        <tr style="background-color: #FFFFCC; width: 95%">
          <td style="width: 20%">付与権限</td>
          <td style="width: 80%"><%= @scope %></td>
        </tr>
        <tr style="background-color: #FFFFCC; width: 95%">
          <td style="width: 20%">ユーザーID</td>
          <td style="width: 80%"><%= @userId %></td>
        </tr>
        <tr style="background-color: #FFFFCC; width: 95%">
          <td style="width: 20%">ユーザー名</td>
          <td style="width: 80%"><%= @displayName %></td>
        </tr>
    </tbody>
  </table>
  
  <br></br>
  <hr>
</div>