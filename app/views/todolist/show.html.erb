<head>
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes">
	<style>
    .title-bar {
      color: white;
      padding: 0;
      margin: -21px;
      background-color: #4F78A4;
      box-shadow: 0 2px 6px rgba(0, 0, 0, .15);
      position: relative;
      /*border-bottom: solid 3px #FFFFCC;*/
      border-radius: 5px 5px 0 0;
      transition: .4s;
    }
  </style>
</head>

<!-- ToDoリスト 表示ページ -->
<div class="center jumbotron jumbotron-extend border" style="background-color: white; padding: 0px 20px 20px;">
  <p id="notice"><%= notice %></p>
  
  <h1 class="title-bar">ToDoリスト</h1>
  
  <div class="text-left">
    <%= link_to 'ToDo登録', todolist_new_path, remote: true, class: "btn btn-outline-primary btn-sm ml-4 mb-3 mt-2" %>
  </div>
  <table class="table table-striped table-condensed bg-white ml-auto mr-auto" style="width: 95%;">
    <thead>
      <tr style="background-color: #FFFFCC;">
        <th style="width: 100px;">日付</th>
        <th style="width: 80px;">時間</th>
        <th class="text-left">ToDo</th>
        <th style="width: 80px;"></th>
        <!--<th colspan="3"></th>-->
      </tr>
    </thead>
  
    <tbody>
      <!-- ToDoリスト本体作成 -->
      <% @todoData.each do |todolist| %>
        <tr style="border-bottom:solid 1px silver;">
          <td><%= todolist.start_date.strftime('%Y/%m/%d') if todolist.start_date.present? %></td>
          <td><%= todolist.start_date.strftime('%H:%M') if todolist.start_date.present? %></td>
          <td class="text-left"><%= todolist.todo %></td>
          <!--<td><%#= link_to 'Show', event %></td>-->
          <!--<td><%#= link_to 'Edit', edit_event_path(event) %></td>-->
          <td>
            <div class="btn-group">
              <%= link_to '編集', '#', class: "btn btn-outline-primary btn-sm" %>
              <%= link_to '完了', todolist_finish_path(id: todolist.id), class: "btn btn-primary btn-sm", data: { confirm: 'ToDoを完了にしてもよろしいですか？' } %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
  
<!-- ToDo（完了）リスト作成 -->
<div class="center jumbotron jumbotron-extend border" style="background-color: white; padding: 20px 20px;">
  <% loopCount = 0 %>
  <% @todoFinishData.each do |todofinishlist| %>
    <% loopCount += 1 %>
    <% if loopCount == 1 %>
      <br></br>
      <h2 class="title-bar" style="margin-top: -70px; margin-bottom: -20px;">ToDo完了リスト</h2>
      <table class="table table-striped table-condensed bg-white ml-auto mr-auto" style="width: 95%; margin-top: 50px;">
        <thead>
          <tr style="background-color: #FFFFCC;">
            <th style="width: 100px;">日付</th>
            <th style="width: 80px;">時間</th>
            <th class="text-left">ToDo</th>
            <th style="width: 80px;"></th>
            <!--<th colspan="3"></th>-->
          </tr>
        </thead>
        <tbody>
    <% end %>
      
          <!-- ToDo(完了)リスト本体作成 -->
          <tr style="border-bottom:solid 1px silver;">
            <td><s><%= todofinishlist.start_date.strftime('%Y/%m/%d') if todofinishlist.start_date.present? %></s></td>
            <td><s><%= todofinishlist.start_date.strftime('%H:%M') if todofinishlist.start_date.present? %></s></td>
            <td class="text-left"><s><%= todofinishlist.todo %></s></td>
            <td><%= link_to '削除', todolist_delete_path(id: todofinishlist.id), class: "btn btn-primary btn-sm", data: { confirm: 'ToDoを削除してもよろしいですか？' } %></td>
          </tr>
  <% end %>
  
  <% if loopCount > 0 %>
        </tbody>
      </table>
  <% end %>
  
  <%#= link_to 'New Event', new_event_path %>
</div>

<!--モーダルウインドウ表示-->
<div id="todo-new" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>