<!-- メモ帳 表示ページ -->
<div class="center jumbotron jumbotron-extend border" style="background-color: #FFFFFF; padding: 5px 20px; margin-top: 27px; margin-left: -5px;">
  <!--<p id="notice"><%#= notice %></p>-->
  
  <h1 class="memo-title">メモ帳</h1>

  <%= form_with(model: @memoData, url: memopad_delete_path, local: true) do |f| %>
    <div class="text-left">
      <%= link_to 'メモ追加', memopad_new_path, remote: true, class: "btn ml-4 mb-1 mt-2 btn-outline-primary btn-sm" %>
      <%= f.submit "メモ削除", class: "btn btn-outline-primary ml-2 mb-1 mt-2 btn-sm" %> <!--, data: { confirm: 'メモを削除してもよろしいですか？' } %>-->
    </div>
    
    <% @memoData.each do |memolist| %>
      <div class="center jumbotron border" style="background-color: #FFFFCC; margin: 25px; padding: 5px 0px 1px 0px;">
        <div class="panel-group">
          <div class="panel panel-default">
            <div class="panel-heading">
              <% orderNo = memolist.orderno %>
              <div class="mt-3 ml-4 mr-3" style="float: left; transform: scale(2.0);">
                <%= check_box_tag :"del_chk#{orderNo}", true, false, {class: "bg-primary"} %>
              </div>
              <h3 class="panel-title">
                <a data-toggle="collapse" href="#collapse<%= memolist.orderno %>" style="display: block; text-decoration: none; color: black; text-align: left; padding: 5px 25px">
                  <div class="arrow1" style="float: right;"></div>
                  <div style="padding-top: 3px;">
                    <%= memolist.orderno %>.
                    <%= memolist.title %>
                  </div>
                </a>
              </h3>
            </div>
            <div id="collapse<%= memolist.orderno %>" class="panel-collapse collapse">
              <div class="panel-body text-left mt-3 mb-3">
                <!--<hr class="mr-3">-->
                <div class="jumbotron jumbotron-fluid border" style="background-color: #FFFFFF; margin: 25px; padding: 20px 20px;">
                  <h4><%= memolist.memo %></h4>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>

</div>

<!--モーダルウインドウ表示-->
<div id="memopad-new" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>

<script>
  $(document).ready(function(){
    $(".panel-title").on("click", function() {
      $(this).children().children(".arrow1").toggleClass("arrow2");
    });
  });
</script>