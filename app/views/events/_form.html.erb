<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" style="padding-right: 10px;">
    <%= form.label :スケジュール名 %>
    <%= form.text_field :title, id: :event_title, size: "35" %>
  </div>

  <div class="field form-group">
    <span style="vertical-align: top;"><%= form.label :スケジュール内容 %></span>
    <%= form.text_area :description, id: :event_description, size: "40x2" %>
  </div>

  <div class="field" style="padding-right: 30px;">
    <%= form.label :開始日時 %>
    <% if year == nil || month == nil || day == nil %>
      <%= form.datetime_select :start_date, {:use_month_numbers => true}, id: :event_start_date %>
    <% else %>
      <%= form.datetime_select :start_date, {:use_month_numbers => true, default: Date.new(year.to_i, month.to_i, day.to_i)}, id: :event_start_date %>
    <% end %>
  </div>

  <div class="field" style="padding-right: 30px;">
    <%= form.label :終了日時 %>
    <% if year == nil || month == nil || day == nil %>
      <%= form.datetime_select :end_date, {:use_month_numbers => true}, id: :event_end_date %>
    <% else %>
      <%= form.datetime_select :end_date, {:use_month_numbers => true, default: Date.new(year.to_i, month.to_i, day.to_i)}, id: :event_end_date %>
    <% end %>
  </div>

  <div class="actions mt-3">
    <%= form.submit class: "btn btn-primary" %>
    <% if event.title != nil %>
      <%= link_to '削除', event, method: :delete, class: "btn ml-3 btn-danger align-left", data: { confirm: 'イベントを削除してもよろしいですか？' } %>
    <% end %>
  </div>
<% end %>
