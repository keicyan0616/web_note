<% provide(:title, 'プロフィール変更') %>
<div class="jumbotron-extend" style="background-color: #FFFFFF; margin-top: 15px;">
  <div class="container text-center mb-5">

    <h2 class="d-inline-block border-bottom border-dark my-5">プロフィール変更</h2>
    <!--<h2>Edit <%#= resource_name.to_s.humanize %></h2>-->

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mb-3">
        <strong><%= f.label '名前' %></strong><br />
        <%= f.email_field :username, autofocus: true, autocomplete: "username" %>
      </div>
    
      <div class="field mb-3">
        <strong><%= f.label :email %></strong><br />
        <%= f.email_field :email, autocomplete: "email" %>
      </div>
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    
      <div class="field mb-3">
        <strong><%= f.label :password %></strong><br />
        <%= f.password_field :password, autocomplete: "new-password" %><br>
        <i>変更したくない場合は空欄のままにしてください。</i>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> 文字以上</em>
        <% end %>
      </div>
    
      <div class="field mb-3">
        <strong><%= f.label :password_confirmation %></strong><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    
      <div class="field mb-3">
        <strong><%= f.label :current_password %></strong><br />
        <%= f.password_field :current_password, autocomplete: "current-password" %><br>
        <i>パスワードを変更するには、現在のパスワードが必要です。</i>
      </div>
    
      <div class="actions mb-3">
        <%= f.submit "Update", class:"btn btn-primary mr-2" %>
        <%= link_to "キャンセル", schdule_show_path, class: "btn btn-outline-primary" %>
      </div>
    <% end %>
    
    
    <!--<h3>アカウントの削除</h3>-->
    <%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "アカウントを削除しますか？" }, method: :delete, class:"btn btn-danger" %>
    
    <%#= link_to "Back", :back %>

  </div>
</div>